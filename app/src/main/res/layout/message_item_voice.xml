<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bloc_receive_voice_message"
        android:layout_width="@dimen/chat_voice_width"
        android:layout_height="@dimen/chat_voice_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/bg_receiving_message"
        android:layout_margin="@dimen/small_margin">
        
        <ImageView
            android:id="@+id/chat_btn_receive_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_play_blue"
            android:layout_marginStart="@dimen/small_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/chat_btn_receive_stop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_stop_blue"
            android:layout_marginStart="@dimen/small_margin"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
        <TextView
            android:id="@+id/chat_receive_voice_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="12:00"
            android:layout_marginEnd="@dimen/small_margin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bloc_user_voice_message"
        android:layout_width="@dimen/chat_voice_width"
        android:layout_height="@dimen/chat_voice_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_user_message"
        android:layout_margin="@dimen/small_margin">

        <ImageView
            android:id="@+id/chat_btn_user_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_play_green"
            android:layout_marginStart="@dimen/small_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/chat_btn_user_stop"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_stop_green"
            android:layout_marginStart="@dimen/small_margin"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/chat_user_voice_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGreenDark"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="12:00"
            android:layout_marginEnd="@dimen/small_margin"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>